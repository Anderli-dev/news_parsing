pipeline {
    agent any
    triggers {
        pollSCM '*/5 * * * *'
    }
    environment {
        AWS_REGION = 'eu-central-1'
        AWS_ACCOUNT_ID = '361769559551'
        ECR_REPOSITORY_1 = 'backend'
        ECR_REPOSITORY_2 = 'frontend'
        IMAGE_TAG_1 = "latest"
        IMAGE_TAG_2 = "latest"
        AWS_CREDENTIALS = "ecr:eu-central-1:aws-credentials"
    }
    stages {
        stage('Check Tools') {
            steps {
                sh '''
                    echo "Перевірка AWS CLI та Docker"
                    aws --version || echo "AWS CLI не доступний"
                    docker --version || echo "Docker не доступний"
                '''
            }
        }
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Login to AWS ECR') {
            steps {
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} | \
                    docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                '''
            }
        }
        stage('Tag Docker Images') {
            steps {
                sh '''
                    docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPOSITORY_1}:${IMAGE_TAG_1}
                    docker push ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPOSITORY_2}:${IMAGE_TAG_2}
                '''
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    sh 'docker push ${ECR_REPOSITORY_1}:${IMAGE_TAG_1}'
                    sh 'docker push ${ECR_REPOSITORY_2}:${IMAGE_TAG_2}'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}